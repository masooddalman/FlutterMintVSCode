{
  "name": "flutterforge",
  "displayName": "FlutterForge",
  "description": "Visual architecture editor for Flutter projects with MVVM clean architecture",
  "version": "0.0.1",
  "publisher": "flutterforge",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:.flutterforge.yaml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "flutterforge.createProject",
        "title": "FlutterForge: Create Project"
      },
      {
        "command": "flutterforge.addScreen",
        "title": "FlutterForge: Add Screen"
      },
      {
        "command": "flutterforge.openEditor",
        "title": "FlutterForge: Open Visual Editor"
      },
      {
        "command": "flutterforge.status",
        "title": "FlutterForge: Show Status"
      },
      {
        "command": "flutterforge.addModule",
        "title": "FlutterForge: Add Module"
      },
      {
        "command": "flutterforge.removeModule",
        "title": "FlutterForge: Remove Module"
      },
      {
        "command": "flutterforge.configModule",
        "title": "FlutterForge: Configure Module"
      },
      {
        "command": "flutterforge.run",
        "title": "FlutterForge: Run"
      },
      {
        "command": "flutterforge.build",
        "title": "FlutterForge: Build"
      },
      {
        "command": "flutterforge.addPlatform",
        "title": "FlutterForge: Add Platform"
      },
      {
        "command": "flutterforge.removePlatform",
        "title": "FlutterForge: Remove Platform"
      },
      {
        "command": "flutterforge.toggleHttp",
        "title": "FlutterForge: Toggle HTTP"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "flutterforge",
          "title": "FlutterForge",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "flutterforge": [
        {
          "id": "flutterforge.sidebarView",
          "type": "webview",
          "name": "FlutterForge"
        }
      ]
    },
    "configuration": {
      "title": "FlutterForge",
      "properties": {
        "flutterforge.cliPath": {
          "type": "string",
          "default": "E:\\flutterProject\\FlutterForge",
          "description": "Path to the FlutterForge CLI project (e.g. E:\\flutterProject\\FlutterForge)"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.0.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "yaml": "^2.3.0"
  }
}
